<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/TransactionListFragment">

    <fragment
        android:id="@+id/TransactionListFragment"
        android:name="nz.co.test.transactions.ui.fragments.TransactionListFragment"
        android:label="navigation_transactions_fragment"
        tools:layout="@layout/fragment_transacton_list" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/TransactionDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"  />
    </fragment>

    <fragment
        android:id="@+id/TransactionDetailFragment"
        android:name="nz.co.test.transactions.ui.fragments.TransactionDetailFragment"
        android:label="navigation_transaction_detail_fragment"
        tools:layout="@layout/fragment_transaction_detail" >
        <argument
            android:name="transactionBundle"
            app:argType="nz.co.test.transactions.ui.bundles.TransactionItemBundle"
            app:nullable="false"/>
    </fragment>
</navigation>